@model MyRecipeStorage.ViewModels.Search.SearchViewModel

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
    
    //SeMyRecipeStorage.ViewModels.Search.SearchViewModel
*@

@{
}
<h1>Search result</h1>
@if (Model.ListOfRecipes == null)
{
    <h2>No resluts</h2>
}
else
{
  foreach (var recipe in Model.ListOfRecipes)
  {

      <a href="/Recipe/@recipe.RecipeGuid">
          <h2>@recipe.Title</h2>
          <h3>@recipe.SubTitle</h3>
          <h3>@recipe.Difficulty - @recipe.TimeEstimate</h3>
      </a>
  }
}

